<script type="text/javascript">
    function RegisterIP() {
        var key = $("#vpnKEY").val();
        var ip = $("#vpnIP").val();
        $.post("/Default/RegisterIP", { Key: key, ip: ip }, function (msg) {
            alert(msg);
        })
    }
</script>
<script type="text/javascript">
    function getIP() {
        var key = $("#getVpnKEY").val();
        $.post("/Default/getIP/1",
            { Keys: key },
            function (msg) {
                var ipMsg = "数量:";
                ipMsg += msg.length;
                ipMsg += ";<br/>";
                $(msg).each(function () {
                    ipMsg += this.Name;
                    ipMsg += ",";
                    ipMsg += this.vpnIP;
                    ipMsg += ".<br/>";
                })
                $("#getIP").html(ipMsg);
            });
    }
</script>

